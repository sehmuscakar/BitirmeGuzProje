@model List<DataAccessLayer.Entities.Service>
<section id="specials" class="specials">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Hizmetler</h2>
            <p>Sizin için Hizmeteyiz</p>
        </div>
        @foreach (var item in Model)
        {
        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#tab">@item.Title</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-9 mt-4 mt-lg-0">
                <div class="tab-content">
                        <div class="tab-pane active" id="tab">
                        <div class="row">
                            <div class="col-lg-8 details order-2 order-lg-1">

                                    <h4>    <p>@item.Description</p></h4>  
                            
                            </div>
                            <div class="col-lg-4 text-center order-1 order-lg-2">
                                <img src="~/Img/@item.ImageUrl" alt="" class="img-fluid" width="200" height="120" >
                            </div>
                        </div>
                    </div>
                
                </div>
            </div>
        </div>
        }
    </div>
</section><!-- End Specials Section -->