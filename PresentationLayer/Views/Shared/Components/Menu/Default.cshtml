@model List<DataAccessLayer.Dtos.AdminDtos.MenuListDto>
<section id="menu" class="menu section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Menülerimiz</h2>
            <p>Lezzet ve Damak </p>
        </div>
        @await Component.InvokeAsync("MenuCategory")

        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var item in Model)
            {  
            <div class="col-lg-6 menu-item @item.MenuCategoryName">
                <img src="~/Img/@item.ImageUrl" class="menu-img" alt="">
                <div class="menu-content">
                    <a href="#">@item.Name</a><span>@item.Price TL</span>
                </div>
                <div class="menu-ingredients">
                 @item.Description
                </div>
            </div>
            }
        </div>

    </div>
</section><!-- End Menu Section -->